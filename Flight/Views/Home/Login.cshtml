@{
    Layout = "layout3";
}
@model Flight.Models.User

<div class="container-fluid pt-4 px-4 m-auto ml-5">
    <div class="row g-4 m-auto d-flex align-content-center justify-content-center">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Log In</h6>
                <form asp-action="Log" asp-controller="Home">

                   
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" asp-for="UsersEmail" class="form-control" id="exampleInputEmail1" placeholder="Enter Your Email"
                               aria-describedby="emailHelp">
                    </div>

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Password</label>
                        <input type="text" asp-for="UsersPassword" class="form-control" id="exampleInputEmail1" placeholder="Enter Your Password"
                               aria-describedby="emailHelp">
                    </div>


                    <button type="submit" class="btn btn-primary m-auto">Log In</button>
                    <p>@ViewBag.dataa</p>
                </form>
            </div>







        </div>
    </div>
</div>