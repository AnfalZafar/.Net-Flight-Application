@{
}
@model IEnumerable<Flight.Models.Role>




<div class="content">

          
            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4 ml-5">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Table Without Border</h6>
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Name</th>
                                <th>Delete</th>



                            </tr>
                                </thead>
                                <tbody>
                                    @foreach (var value in Model)
                                    {
                                        <tr>
                                            <th scope="row">@value.RoleId</th>
                                            <td>@value.RoleName</td>
                                    <th scope="col"><a asp-route-Id="@value.RoleId" asp-action="role_delete" asp-controller="Home">Delete</a></th>

                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>
            </div>
            </div>
            <!-- Table End -->
            <!-- Footer Start -->
          