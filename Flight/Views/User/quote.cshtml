@{
    Layout = "user_layout";
}
@model Flight.Models.Feedback;

@if (!string.IsNullOrEmpty(ViewBag.email_error))
{
	<script>
		alert('@ViewBag.email_error');
	</script>
}
<!-- start banner Area -->
<section class="relative about-banner">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					Feedback Us
				</h1>
				<p class="text-white link-nav"><a asp-action="Index" asp-controller="User">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="contact.html">Feedback</a></p>
			</div>
		</div>
	</div>
</section>

<section class="w-100 ">

	<div class="col-lg-8 mt-5 w-100">
		<form class="form-area contact-form text-right w-100" asp-action="user_feedback" asp-controller="User" method="post">
			<div class="row bg-primary" style="width:100%">
				<div class="col-lg-6 d-flex justify-content-center w-100">
					<img src="~/img/about-img.jpg" />
				</div>
				<div class="col-lg-6 form-group d-flex justify-content-center flex-column w-100">
					<input asp-for="FName" asp-controller="User" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" class="common-input mb-20 form-control" required="" type="text">

					<input asp-for="FEmail" asp-controller="User" placeholder="Enter email address" pattern="[A-Za-z0-9._%+-]+[A-Za-z0-9.-]+\.[A-Za-z]{1,63}$" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" class="common-input mb-20 form-control" required="" type="email">

					<input asp-for="FPhone" asp-controller="User" placeholder="Enter Phone Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter subject'" class="common-input mb-20 form-control" required="" type="text">

					<input asp-for="FAddress" asp-controller="User" placeholder="Enter Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter subject'" class="common-input mb-20 form-control" required="" type="text">
					
					<textarea asp-for="FFeedback" asp-controller="User" class="common-textarea form-control" placeholder="Enter Feedback" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Feedback'" required=""></textarea>

					<button class="genric-btn primary mt-3" style="float: right;">Feedback</button>

				</div>
				
			</div>
		</form>
	</div>

</section>
<!-- End banner Area -->
