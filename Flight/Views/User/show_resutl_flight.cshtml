@{
    Layout = "user_layout";
}

@model IEnumerable<Flight.Models.Schedule>;

<!-- start banner Area -->
<section class="about-banner relative">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					Tour Packages
				</h1>
				<p class="text-white link-nav"><a asp-action="Index" asp-controller="User">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="packages.html"> Tour Packages</a></p>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->

<section class="destinations-area section-gap mt-5">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-40 col-lg-8">
				<div class="title text-center">
					<h1 class="mb-10">Here Is Your Result</h1>
				</div>
			</div>
		</div>
		<div class="row d-flex justify-content-center">
			@foreach (var value in Model)
			{
				<div class="col-lg-4">
					<div class="single-destinations">
						<div class="thumb">
							<img src="~/img/packages/d1.jpg" alt="">
						</div>
						<div class="details">
							<h4>@value.Routess.RTo To @value.Routess.RFrom</h4>

							<ul class="package-list">
								<li class="d-flex justify-content-between align-items-center">
									<span>Duration</span>
									<span>@value.Arraval</span>
								</li>
								<li class="d-flex justify-content-between align-items-center">
									<span>Date</span>
									<span>@value.Departual</span>
								</li>
								<li class="d-flex justify-content-between align-items-center">
									<span>Flight</span>
									<span>@value.Flight.FName</span>
								</li>
								<li class="d-flex justify-content-between align-items-center">
									<span>Special Set</span>
									<a asp-route-id="@value.SheduleId" asp-action="show_special_sets" asp-controller="User" class="btn btn-danger">Book</a>
								</li>
								<li class="d-flex justify-content-between align-items-center">
									<span>Price per person</span>
									<h5>$@value.Price</h5>
								</li>
								<li class="d-flex justify-content-between align-items-center">
									<form class="row" method="post" asp-action="add_to_cart" asp-controller="User">

										<input type="hidden" name="from" value="@value.Routess.RFrom" />
										<input type="hidden" name="to" value="@value.Routess.RTo" />
										<input type="hidden" name="f_name" value="@value.Flight.FName" />
										<input type="hidden" name="price" value="@value.Price" />
										<input type="hidden" name="s_id" value="@value.SheduleId" />
										<button type="submit" class="price-btn border-none ml-5">Book Now</button>
									</form>
								</li>
							</ul>
						</div>
					</div>
				</div>
			}


		</div>
	</div>
